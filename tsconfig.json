{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es6"
    ],
    "strict": true,
    "stripInternal": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
  },
  "files": ["bundle.js"],
  "include": [
    "bundle.js",
    "**/*.ts",
    "**/*.js",
  ],
  "exclude": [
    "dist"
  ]
}